<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/background_button_white"
  android:padding="16dp">

  <ImageView
    android:id="@+id/avatar_imageview"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginRight="16dp"/>

  <TextView
    android:id="@+id/name_textview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_toLeftOf="@+id/time_textview"
    android:layout_toRightOf="@+id/avatar_imageview"
    android:text="name"
    android:textColor="@color/black87"
    android:textSize="14sp"/>

  <TextView
    android:id="@+id/message_textview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/name_textview"
    android:layout_alignRight="@+id/name_textview"
    android:layout_below="@+id/name_textview"
    android:text="message"
    android:maxLines="2"
    android:ellipsize="end"
    android:textSize="12sp"/>

  <TextView
    android:id="@+id/time_textview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginLeft="16dp"
    android:gravity="right"
    android:text="time"
    android:textSize="10sp"/>

  <TextView
    android:id="@+id/unread_textview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@id/time_textview"
    android:layout_marginTop="8dp"
    android:background="@drawable/background_chat_unread"
    android:text="0"
    android:textColor="@android:color/white"
    android:textSize="10sp"/>

</RelativeLayout>
