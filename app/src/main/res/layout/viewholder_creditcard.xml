<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/background_button_white"
  android:padding="16dp">

  <ImageView
    android:id="@+id/card_imageview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="16dp"
    android:src="@drawable/img_credit_visa"/>

  <TextView
    android:id="@+id/cardnum_textview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/card_imageview"
    android:layout_toLeftOf="@+id/check_imageview"
    android:text="**** **** **** ****"
    android:textColor="@color/black87"
    android:textSize="16sp"/>

  <TextView
    android:id="@+id/carddate_textview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/cardnum_textview"
    android:layout_alignRight="@id/cardnum_textview"
    android:layout_below="@+id/cardnum_textview"
    android:text="@string/payment_creditcard_date"
    android:textSize="12sp"/>

  <ImageView
    android:id="@+id/check_imageview"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="16dp"
    android:src="@drawable/ic_to_check"/>

</RelativeLayout>