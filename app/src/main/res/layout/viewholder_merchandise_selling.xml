<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/background_button_white"
  android:layerType="hardware"
  android:padding="16dp">

  <ImageView
    android:id="@+id/avatar_imageview"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginRight="16dp"/>

  <TextView
    android:id="@+id/textview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_toLeftOf="@+id/book_imageview"
    android:layout_toRightOf="@+id/avatar_imageview"
    android:text="text"
    android:textColor="@color/black87"
    android:textSize="14sp"/>

  <TextView
    android:id="@+id/price_textview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/textview"
    android:layout_below="@+id/textview"
    android:layout_marginRight="4dp"
    android:text="@string/money_unit"
    android:textColor="@color/black54"
    android:textSize="12sp"/>

  <TextView
    android:id="@+id/quality_textview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textview"
    android:layout_toRightOf="@+id/price_textview"
    android:text="@string/book_status_good"
    android:textColor="@color/black26"
    android:textSize="12sp"/>

  <ImageView
    android:id="@+id/book_imageview"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginLeft="16dp"
    android:adjustViewBounds="true"/>

</RelativeLayout>
