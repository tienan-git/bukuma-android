<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:background="@android:color/white"
	android:padding="16dp">

	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="0dp"
		android:layout_weight="1"
		android:layout_height="wrap_content"
		android:background="@android:color/white"
		android:orientation="vertical">

		<TextView
			android:id="@+id/title_textview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/point_transaction_balance_bonus"
			android:textColor="@color/black54"
			android:textSize="12sp"/>

		<TextView
			android:id="@+id/balance_textview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:text="@string/money_unit"
			android:textStyle="bold"
			android:textColor="@color/black87"
			android:textSize="20sp"/>

	</LinearLayout>

	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="2"
		android:background="@android:color/white"
		android:orientation="vertical">

		<TextView
			android:id="@+id/expiring_title_textview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="right"
			android:text="@string/point_transaction_balance_point_title"
			android:textColor="@color/black54"
			android:textSize="12sp"/>

		<LinearLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@android:color/white"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/expiring_day_textview"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_weight="2"
				android:gravity="right"
				android:text="text"
				android:textColor="@color/black54"
				android:textSize="12sp"/>

			<TextView
				android:id="@+id/expiring_point_textview"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_weight="1"
				android:gravity="right"
				android:text="..."
				android:textStyle="bold"
				android:textColor="@color/black87"
				android:textSize="20sp"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>