<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@android:color/white">

  <RelativeLayout
    android:id="@+id/vote_view"
    android:layout_width="48dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="4dp">

    <LinearLayout
      android:id="@+id/count_view"
      android:layout_width="wrap_content"
      android:layout_height="20dp"
      android:layout_centerInParent="true"
      android:paddingLeft="7dp"
      android:paddingRight="7dp"
      android:background="@drawable/background_warm_pink_circle">

      <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/warm_pink"
        android:text="1"
        android:textSize="12sp"/>
    </LinearLayout>

    <ImageView
      android:id="@+id/plus_view"
      android:layout_width="9dp"
      android:layout_height="22dp"
      android:layout_toRightOf="@id/count_view"
      android:layout_below="@id/count_view"
      android:layout_marginLeft="-7dp"
      android:layout_marginTop="-20dp"
      android:background="@drawable/ic_add_tag"/>
  </RelativeLayout>

  <TextView
    android:id="@+id/name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/vote_view"
    android:layout_centerVertical="true"
    android:paddingLeft="4dp"
    android:textColor="@color/warm_pink"
    android:text="#shushu"
    android:textSize="12sp"/>

</RelativeLayout>

