<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@android:color/white">

  <View
    android:id="@+id/cover_view"
    android:layout_width="0dp"
    android:layout_height="70dp"
    android:background="@color/colorPrimary"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <ImageView
    android:id="@+id/avatar_imageview"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginEnd="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/background_avatar"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/official_textview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:gravity="center"
    android:text="account"
    android:textAlignment="center"
    android:textColor="@color/black26"
    android:textSize="10sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/avatar_imageview"
    app:layout_constraintBottom_toTopOf="@+id/name_textview"/>

  <TextView
    android:id="@+id/name_textview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="20dp"
    android:text="Name"
    android:textColor="@color/black87"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/avatar_imageview"/>

  <ImageView
    android:id="@+id/official_imageView"
    android:layout_width="19dp"
    android:layout_height="19dp"
    android:layout_marginEnd="16dp"
    android:layout_marginLeft="4.5dp"
    android:layout_marginBottom="7dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/ic_official"
    app:layout_constraintTop_toBottomOf="@+id/avatar_imageview"
    app:layout_constraintLeft_toRightOf="@+id/name_textview"
    app:layout_constraintBottom_toTopOf="@+id/bio_textview"/>

  <TextView
    android:id="@+id/bio_textview"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:gravity="center"
    android:text="yoroshiku"
    android:textAlignment="center"
    android:textColor="@color/black26"
    android:textSize="14sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/name_textview"/>

  <Button
    android:id="@+id/action_button"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/background_button_primary"
    android:text="Action"
    android:textColor="@android:color/white"
    android:textSize="12sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/bio_textview"/>

</android.support.constraint.ConstraintLayout>